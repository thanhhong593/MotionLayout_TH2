<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyPosition
               motion:motionTarget="@+id/image1"
               motion:framePosition="32"
               motion:keyPositionType="deltaRelative" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imgBaby"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="76dp"
            motion:layout_constraintHorizontal_bias="0.497"
            android:rotation="360" />
        <Constraint
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteY="555dp"
            motion:layout_editor_absoluteX="177dp"
            android:alpha="-1" />
        <Constraint
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="-1"
            motion:layout_editor_absoluteY="555dp"
            motion:layout_editor_absoluteX="177dp" />
        <Constraint
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteY="555dp"
            motion:layout_editor_absoluteX="177dp"
            android:alpha="-1" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="76dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.497"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imgBaby" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@+id/imgBaby"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.502"
            motion:layout_constraintEnd_toEndOf="@+id/imgBaby"
            android:layout_width="wrap_content"
            android:id="@+id/image1"
            motion:layout_constraintTop_toBottomOf="@+id/imgBaby"
            android:layout_marginTop="230dp"
            motion:layout_constraintVertical_bias="0.163" />
        <Constraint
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/imageView4"
            motion:layout_constraintHorizontal_bias="0.55"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="424dp" />
        <Constraint
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/image1"
            motion:layout_constraintStart_toEndOf="@+id/imageView3"
            motion:layout_constraintVertical_bias="0.849"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp" />
        <Constraint
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.629"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp" />
    </ConstraintSet>
</MotionScene>